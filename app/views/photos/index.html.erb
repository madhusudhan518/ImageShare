<div class="row text-center">
<% @photos.each do |photo| %>
  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card h-100">
      <%= link_to image_tag(photo.image.thumb('500x325#').url, alt: photo.tag_line, class: 'img-thumbnail'),
                  photo.image.url, target: '_blank' if photo.image_stored? %>
      <div class="card-footer">
        <h6 class="card-title"><%= photo.tag_line %></h6>
        <h6 class="card-title">Uploaded By: <%= photo.album.user.name %></h6>
      </div>
    </div>
  </div>
<% end %>
</div>
