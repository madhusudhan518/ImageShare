<h1>List of photos</h1>

<%= link_to 'Add your photo', new_photo_path, class: 'btn btn-lg btn-primary' %>

<ul class="row" id="photos-list">
  <% @photos.each do |photo| %>
    <li class="col-xs-3">
      <%= link_to image_tag(photo.image.thumb('180x180#').url, alt: photo.tag_line, class: 'img-thumbnail'),
                  photo.image.url, target: '_blank' if photo.image_stored? %>
      <p><%= photo.tag_line %></p>
    </li>
  <% end %>
</ul>
