<p id="notice"><%= notice %></p>

<h1>Albums</h1>
<%= link_to 'New Album', new_album_path, class: 'btn btn-success' %>
<br/>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="4" align="center"> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.user_id %></td>
        <td><%= link_to 'Add Photo', new_album_photo_path(album) %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
